{
  "functions": {
    "backend/**/*.ts": {
      "runtime": "@vercel/node"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/backend/$1"
    },
    {
      "source": "/((?!api).*)",
      "destination": "/frontend/$1"
    }
  ],
  "buildCommand": "npm run build",
  "outputDirectory": "frontend/dist",
  "installCommand": "npm install"
}
